<UserControl x:Class="FairSplit.Views.GroupMainInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:views="clr-namespace:FairSplit.Views.Components"
             xmlns:vms="clr-namespace:FairSplit.ViewModels.Components"
             xmlns:local="clr-namespace:FairSplit.Views" xmlns:viewmodels="clr-namespace:FairSplit.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:GroupMainInfoViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MaxWidth="280"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="58"/>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid Margin="8 8 8 8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Style="{StaticResource WithBackgroundLabelStyle}" 
                       Content="{Binding Name}" 
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch"
                       Grid.Column="1"/>

                <Button Content="↩" 
                        Command="{Binding BackToSelectGroupsCommand}"
                        Background="#FF655C7B"
                        FontSize="20"
                        Width="50"
                        Margin="0 0 -15 0"
                        VerticalAlignment="Center"
                        VerticalContentAlignment="Center"
                        Grid.Column="0"/>
            </Grid>

            <Button Grid.Row="1" 
                    Command="{Binding GroupOverviewSelectedCommand}" 
                    HorizontalAlignment="Stretch" 
                    HorizontalContentAlignment="Left" 
                    Content="Overview"  
                    Margin="8 0 8 0" 
                    Height="50"
                    FontSize="20"
                    Background="{Binding OverviewButtonColor}"/>

            <ListView Grid.Row="2" 
                      ItemsSource="{Binding Persons}" 
                      SelectedItem="{Binding SelectedPerson, Mode=TwoWay}"
                      SelectionMode="Single" 
                      Background="Transparent"
                      BorderThickness="0"
                      Margin="3">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" FontSize="18"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </Grid>

        <Border Grid.Column="1" Background="#FF131313" Width="10" CornerRadius="5" HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="0,10,10,10"/>

        <Grid Grid.Column="2">
            <Grid.Resources>
                <DataTemplate DataType="{x:Type vms:GroupOverViewModel}">
                    <views:GroupOverview/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type vms:MemberOverViewModel}">
                    <views:MemberOverview/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type vms:NewTransactionViewModel}">
                    <views:NewTransactionView/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type vms:SettleViewModel}">
                    <views:SettleView/>
                </DataTemplate>
            </Grid.Resources>
            
            <ContentControl Content="{Binding CurrentViewModel}" />
        </Grid>
    </Grid>
</UserControl>
