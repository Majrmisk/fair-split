<Window x:Class="FairSplit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:FairSplit.Views"
        xmlns:vms="clr-namespace:FairSplit.ViewModels"
        xmlns:local="clr-namespace:FairSplit" d:DataContext="{d:DesignInstance Type=vms:MainViewModel}"
        mc:Ignorable="d"
        Title="FairSplit" Height="720" Width="1224"
        MinWidth="450" MinHeight="300" Background="#FF161616">

    <Grid Background="Transparent" MaxWidth="1300">
        <Grid.Resources>
            <DataTemplate DataType="{x:Type vms:SelectGroupViewModel}">
                <views:SelectGroupView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:GroupMainInfoViewModel}">
                <views:GroupMainInfoView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:ManageGroupViewModel}">
                <views:ManageGroupView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:NewGroupViewModel}">
                <views:NewGroupView/>
            </DataTemplate>
        </Grid.Resources>

        <ContentControl Content="{Binding CurrentViewModel}"/>
    </Grid>
</Window>
